<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="horizontal" android:background="#FFFFFFFF" android:padding="@dimen/toast_layout_padding" >
    <ImageView android:layout_width="wrap_content"
		android:layout_height="match_parent" android:src="@drawable/notification_warning"
		android:adjustViewBounds="true" android:layout_gravity="center_vertical"
		android:scaleType="centerInside" />
    <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
        android:layout_gravity="center" android:layout_marginLeft="@dimen/toast_left_margin" android:textAppearance="?android:attr/textAppearanceLarge"
        android:textSize="@dimen/toast_text_height"
        android:id="@+id/errorMessageView" android:textColor="@color/text_base" />
</LinearLayout>
