<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/first_screen_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000"
    tools:context=".ActivityMenuMain" >

    <com.sqiwy.lj_menu.BackgroundButton
        android:id="@+id/second_dish_3_1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:layout_marginRight="5dp"
        android:onClick="clickDish"
        android:src="@drawable/second_dish_3_sashimi" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical" >

        <com.sqiwy.lj_menu.BackgroundButton
            android:id="@+id/second_dish_3_2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="15dp"
            android:layout_marginLeft="5dp"
            android:onClick="clickDish"
            android:src="@drawable/second_dish_1_sashimi" />

        <com.sqiwy.lj_menu.BackgroundButton
            android:id="@+id/second_dish_3_3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:onClick="clickDish"
            android:src="@drawable/second_dish_1_sashimi2" />
    </LinearLayout>

</LinearLayout>