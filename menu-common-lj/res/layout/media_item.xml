<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:paddingBottom="8dp"
    android:paddingLeft="12dp"
    android:paddingRight="12dp"
    android:paddingTop="8dp"
    tools:context=".MainActivity" >

    <LinearLayout
        android:id="@+id/media_item_status_container"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center" >

        <TextView
            android:id="@+id/media_item_status"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="4dp"
            android:layout_marginRight="4dp"
            android:layout_marginTop="4dp"
            android:background="#828282"
            android:padding="4dp"
            android:text="LOADING"
            android:textColor="@android:color/white" />

        <ProgressBar
            android:id="@+id/media_item_progress"
            android:layout_width="26dp"
            android:layout_height="26dp" />
    </LinearLayout>

    <TextView
        android:id="@+id/media_item_info"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/media_item_status_container"
        android:layout_marginTop="4dp"
        android:text="Test media item" />

</RelativeLayout>