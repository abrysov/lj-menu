<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="@dimen/cm_fragment_menu_grand_height"
    android:layout_height="wrap_content"
    android:orientation="vertical" >

    <RelativeLayout
        android:id="@+id/map_panel_floor_button"
        style="@style/map_panel_floor_button" >

        <com.sqiwy.menu.view.TypefaceTextView
            android:id="@+id/map_panel_floor_button_title"
            style="@style/map_panel_floor_button_text"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_centerInParent="true"
            android:gravity="center"
            android:singleLine="true"
            app:customTypeface="fonts/robotoregular.ttf" />

        <com.sqiwy.menu.view.TypefaceTextView
            android:id="@+id/map_panel_floor_button_extra"
            style="@style/map_panel_floor_button_text_ex"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:gravity="center"
            android:singleLine="true"
            app:customTypeface="fonts/robotothin.ttf" />
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#DADADA" />

</LinearLayout>