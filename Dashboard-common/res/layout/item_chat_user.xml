<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="20dp"
    android:paddingRight="20dp"
    android:background="@drawable/selector_user_list"
    android:paddingTop="10dp"
    android:paddingBottom="10dp"
    android:orientation="horizontal"
    android:gravity="center_vertical">
    
    <ImageView 
        android:id="@+id/color"
        android:layout_width="18dp"
        android:layout_height="18dp"
        android:layout_marginRight="20dp"
        android:visibility="gone"/>
    
    <LinearLayout android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center_vertical">
        
        <com.sqiwy.menu.view.TypefaceTextView
	        android:id="@+id/user_name"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:textSize="20dp"/>
        
        <com.sqiwy.menu.view.TypefaceTextView
	        android:id="@+id/status"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:visibility="gone"
	        android:textSize="14dp"
	        android:textColor="#B7B7B7"/>
        
    </LinearLayout>
    
    <com.sqiwy.menu.view.TypefaceTextView
        android:id="@+id/messages_in"
        android:layout_width="18dp"
        android:layout_height="18dp"
        android:background="@drawable/bg_cirkle_pink"
        android:gravity="center"
        android:textColor="@android:color/white"
        android:visibility="gone"
        android:layout_marginLeft="10dp"/>
    
    <ImageView 
        android:id="@+id/is_blocked"
        android:layout_width="18dp"
        android:layout_height="18dp"
        android:src="@drawable/blocked_user_icon"
        android:visibility="gone"
        android:layout_marginLeft="10dp"/>
    
    <ImageView 
        android:id="@+id/smile"
        android:layout_width="18dp"
        android:layout_height="18dp"
        android:visibility="gone"
        android:layout_marginLeft="10dp"/>
    
</LinearLayout>