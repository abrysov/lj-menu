<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/dashboard_header"
    android:orientation="horizontal" >

    <ImageView
        android:id="@+id/btn_lock_screen"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:background="@drawable/block"
        android:scaleType="fitCenter" />

    <ImageView style="@style/cm_fragment_menu_grand_iv_separator" />

    <ImageView
        android:id="@+id/btn_clean_history"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:background="@drawable/remove_history"
        android:scaleType="fitCenter" />

    <ImageView style="@style/cm_fragment_menu_grand_iv_separator" />

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="vertical" />
    
    <ImageView style="@style/cm_fragment_menu_grand_iv_separator" />

    <ImageView
        android:id="@+id/btn_call_waiter"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:background="@drawable/call_waiter" />

    <ImageView style="@style/cm_fragment_menu_grand_iv_separator" />

    <ImageView
        android:id="@+id/btn_rotate_screen"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:background="@drawable/rotation" />

</LinearLayout>