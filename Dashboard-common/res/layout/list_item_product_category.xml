<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/layout_category"
    android:layout_width="@dimen/cm_fragment_product_category_list_width"
    android:layout_height="@dimen/cm_fragment_product_category_list_item_height"
    android:clickable="false"
    android:focusable="false"
    android:paddingBottom="6dp">

    <ImageView
        android:id="@+id/expander"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/arrow_top" 
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="25dp"
        android:visibility="invisible"/>

    <com.sqiwy.menu.view.TypefaceTextView
        android:id="@+id/tv_category"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:layout_marginLeft="@dimen/cm_fragment_product_category_list_tv_padding_left"
        android:layout_toLeftOf="@id/expander"
        android:clickable="false"
        android:focusable="false"
        android:textSize="@dimen/cm_fragment_product_category_list_tv_size"
        app:customTypeface="fonts/robotolight.ttf" />

</RelativeLayout>
