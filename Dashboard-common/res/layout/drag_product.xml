<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/drag_product"
    android:orientation="horizontal"
    android:padding="8dp" >

    <ImageView
        android:id="@+id/iv_drag"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_weight="1"
        android:src="@drawable/mono" />

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="3"
        android:gravity="center_vertical"
        android:orientation="vertical"
        android:paddingLeft="8dp"
        android:paddingRight="4dp" >

        <TextView
            android:id="@+id/tv_drag_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="uydcdc"
            android:textColor="@color/text_base"
            android:textSize="14sp"
            android:textStyle="bold"
            android:paddingBottom="2dp" />

        <TextView
            android:id="@+id/tv_drag_desc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="left"
            android:singleLine="false"
            android:text="uydcdcsfrferfrferfrerer /ndfsffwfwrfwfw"
            android:textColor="@color/text_base"
            android:textSize="12sp" />
    </LinearLayout>

    <TextView
        android:id="@+id/tv_drag_price"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="120$"
        android:textColor="@color/text_base"
        android:textSize="14sp"
        android:textStyle="bold"
        android:layout_weight="1"
        android:gravity="center"  />

</LinearLayout>