<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:gravity="center"
    android:orientation="horizontal" >

    <FrameLayout
        android:id="@+id/fl_0"
        style="@style/ch_fragment_product_list_fl_big" >

        <include layout="@layout/tile_ch" />
    </FrameLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical" >

        <FrameLayout
            android:id="@+id/fl_1"
            style="@style/ch_fragment_product_list_fl_small" >

            <include layout="@layout/tile_ch" />
        </FrameLayout>

        <FrameLayout
            android:id="@+id/fl_2"
            style="@style/ch_fragment_product_list_fl_small" >

            <include layout="@layout/tile_ch" />
        </FrameLayout>
    </LinearLayout>

</LinearLayout>